{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
      "semi": "error",
      "arrow-parens": [0, "always"],
      "comma-dangle": [2, {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "always-multiline"
      }],
      "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
      "no-console": [0, { "allow": true }],
      "import/prefer-default-export": 0,
      "no-use-before-define": [2, { "functions": false, "classes": false, "variables": false }],
      "max-len": ["error", { "code": 200 }],
      "no-param-reassign": [0, "always"],
      "no-sequences": [0, "always"],
      "lines-between-class-members": [0, "always"],
      "no-plusplus": [0, "always"],
      "no-underscore-dangle": [0, "always"],
      "no-nested-ternary": [0, "always"],
      "consistent-return": [0, "always"],
      "no-await-in-loop": [0, "always"],
      "no-continue": [0, "always"],
      "no-lonely-if": [0, "always"],
      "class-methods-use-this": [0, "always"],
      "jsx-quotes": ["error", "prefer-single"],
      "react/jsx-props-no-spreading": [0, "always"],
      "react/jsx-curly-spacing": [2, {"when": "always", "allowMultiline": true}],
      "react/prop-types": [0, "always"]
    }
}
